<%= form_for @post, html:  { role: 'form', class: 'col-md-6 col-md-offset-3' } do |f| %>
  <div class='form-group'>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>
  <%= f.submit "Save", class: 'btn btn-primary' %>
<% end %>